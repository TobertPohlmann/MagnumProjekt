@page "/gerichte"

<h3>Gerichte</h3>

@if (Gerichte == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="tb">
        <tr>
            <em>Gerichte</em>
        </tr>

        @foreach (var gericht in Gerichte)
        {
            <tr>
                <td>
                    <label type="text" class="form-control-plaintext">@gericht.Name</label>
                </td>
            </tr>
        }
    </table>
}
